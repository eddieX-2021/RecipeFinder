<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/detail_iv"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="300dp"/>


    <ImageView
        android:id="@+id/home_back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/arrow_left"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="25dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        />

    <RelativeLayout
        android:id="@+id/detail_one"
        android:layout_below="@id/detail_iv"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:id="@+id/detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"/>

        <ImageView
            android:src="@drawable/heart_outline"
            android:id="@+id/collect_iv"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"/>

        <ImageView
            android:visibility="gone"
            android:src="@drawable/heart"
            android:id="@+id/cancel_collect_iv"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"/>




    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/detail_two"
        android:layout_below="@id/detail_one"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_centerVertical="true"/>


        <TextView
            android:id="@+id/calory_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="#000000"
            android:textSize="10sp"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#333333"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/text_one"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        android:text="ingredients"
        android:layout_below="@id/detail_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/text_two"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        android:layout_below="@id/text_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/text_three"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        android:text="how to make them"
        android:layout_below="@id/text_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/text_four"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        android:layout_below="@id/text_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>







</RelativeLayout>